<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TwoCommaQuotes" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/colorWhite</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/colorBlack</item>
<!--        <item name="android:statusBarColor">@android:color/transparent</item>-->
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="textStyleRegular8">
        <item name="android:textSize">8sp</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:fontWeight" tools:targetApi="o">400</item>
    </style>

    <style name="textStyleMedium8">
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:fontWeight" tools:targetApi="o">500</item>
    </style>

    <style name="textStyleMedium12">
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:fontWeight" tools:targetApi="o">500</item>
    </style>

    <style name="textStyleSemiBold8">
        <item name="android:textSize">@dimen/_8ssp</item>
        <item name="android:fontFamily">@font/inter_semi_bold</item>
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontWeight" tools:targetApi="o">600</item>
    </style>

    <style name="textStyleSemiBold14">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:fontFamily">@font/inter_semi_bold</item>
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontWeight" tools:targetApi="o">600</item>
    </style>

    <style name="textStyleBold10">
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:fontWeight" tools:targetApi="o">700</item>
    </style>

    <style name="textStyleBold14">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:fontFamily">@font/inter_bold</item>
        <item name="android:textColor">@color/colorGray</item>
        <item name="android:fontWeight" tools:targetApi="o">700</item>
    </style>

    <style name="customButtonStyle" parent="textStyleMedium12">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="textAllCaps">false</item>
        <item name="android:background">@drawable/bg_solid_gray_radius_10</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="AppTheme.Theme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/colorSoftGray</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

</resources>